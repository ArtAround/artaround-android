<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- =============================================================== -->
	<!-- Default Theme Styles -->
	<!-- =============================================================== -->

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- Actionbar -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<style
		name="Actionbar">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/art_map_actionbar_background</item>
		<item
			name="android:gravity">center_vertical</item>
		<item
			name="android:paddingBottom">4.5dp</item>
	</style>

	<style
		name="Logo">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:src">@drawable/logo</item>
		<item
			name="android:layout_marginLeft">6dp</item>
	</style>

	<style
		name="ActionbarTitle"
		parent="Actionbar">
		<item
			name="android:textColor">@color/ActionbarTitle</item>
		<item
			name="android:textSize">@dimen/ActionbarTitle</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:padding">10dp</item>
	</style>

	<style
		name="ActionbarTitle.NoBack">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:background">@null</item>
	</style>

	<style
		name="ActionbarLoadingDark">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_marginRight">10dp</item>
		<item
			name="android:layout_gravity">center</item>
		<item
			name="android:src">@drawable/ic_loading_dark</item>
		<item
			name="android:visibility">gone</item>
	</style>

	<style
		name="ActionbarLoadingWhite">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_marginRight">9dp</item>
		<item
			name="android:layout_gravity">center</item>
		<item
			name="android:src">@drawable/ic_loading_white</item>
		<item
			name="android:visibility">gone</item>
	</style>

	<style
		name="ActionbarButton">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:padding">4dp</item>
		<item
			name="android:scaleType">center</item>
		<item
			name="android:background">@null</item>
	</style>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- Bottombar -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<style
		name="Bottombar">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/bottombar_background</item>
		<item
			name="android:gravity">center_vertical</item>
		<item
			name="android:padding">10dp</item>
	</style>

	<style
		name="BottombarLoaderDark">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:src">@drawable/ic_loading_dark</item>
		<item
			name="android:visibility">gone</item>
	</style>

	<style
		name="AddArtButton">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/add_art_button_background</item>
		<item
			name="android:gravity">center</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:textColor">#FFFFFF</item>
	</style>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- General -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	<style
		name="Activity">
		<item
			name="android:orientation">vertical</item>
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:background">@color/Activity</item>
	</style>

	<style
		name="Scrollable">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:fillViewport">true</item>
		<item
			name="android:cacheColorHint">#FF000000</item>
	</style>

	<style
		name="ArtDetailButton">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/art_detail_button_background</item>
		<item
			name="android:textColor">#FFFFFF</item>
		<item
			name="android:minWidth">100dp</item>
		<item
			name="android:gravity">center</item>
	</style>

	<style
		name="Checkbox">
		<item
			name="android:background">@drawable/btn_check_background</item>
		<item
			name="android:button">@drawable/btn_check</item>
	</style>

	<style
		name="Minimap">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">@dimen/MinimapHeight</item>
		<item
			name="android:gravity">center</item>
		<item
			name="android:apiKey">@string/maps_api</item>
	</style>

	<style
		name="MinimapContainer"
		parent="GalleryContainer">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/mini_map_background</item>
		<item
			name="android:paddingLeft">9dp</item>
		<item
			name="android:paddingRight">9dp</item>
		<item
			name="android:layout_marginTop">12dp</item>
	</style>

	<style
		name="MinimapBorder">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@color/MinimapContainerBorder</item>
		<item
			name="android:padding">6dp</item>
	</style>

	<style
		name="GalleryContainer">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:gravity">center</item>
		<item
			name="android:background">@drawable/mini_gallery_background</item>
		<item
			name="android:paddingTop">16dp</item>
		<item
			name="android:paddingBottom">16dp</item>
		<item
			name="android:layout_marginTop">12dp</item>
	</style>

	<style
		name="ArtGalleryActionbar">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:background">@drawable/gallery_actionbar_background</item>
		<item
			name="android:gravity">center</item>
	</style>

	<style
		name="ArtGalleryActionbarTitle">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:textColor">#FFFFFF</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:typeface">serif</item>
	</style>

	<style
		name="AutocompleteText">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:textSize">@dimen/ArtEditInput</item>
		<item
			name="android:textColor">@color/ArtEditInput</item>
	</style>

	<style
		name="ArtBubbleOuter">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:paddingTop">10dp</item>
		<item
			name="android:paddingRight">15dp</item>
		<item
			name="android:paddingLeft">15dp</item>
		<item
			name="android:paddingBottom">35dp</item>
		<item
			name="android:minWidth">200dp</item>
		<item
			name="android:background">@drawable/bubble_background</item>
	</style>

	<style
		name="ArtBubbleText">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:textSize">12sp</item>
		<item
			name="android:textColor">@color/ArtBubbleText</item>
		<item
			name="android:visibility">gone</item>
	</style>

	<style
		name="ArtBubbleText.Title">
		<item
			name="android:textSize">14sp</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:typeface">serif</item>
	</style>


	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- Art Edit -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	<style
		name="ArtEditTableRow">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:paddingLeft">6dp</item>
		<item
			name="android:paddingRight">6dp</item>
		<item
			name="android:paddingTop">12dp</item>
	</style>

	<style
		name="ArtEditLabel">
		<item
			name="android:layout_width">55dp</item>
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:gravity">left|center</item>
		<item
			name="android:layout_gravity">center_vertical</item>
		<item
			name="android:textSize">@dimen/ArtEditLabel</item>
		<item
			name="android:textColor">@color/ArtEditLabel</item>
		<item
			name="android:textStyle">bold|italic</item>
		<item
			name="android:ellipsize">end</item>
		<item
			name="android:singleLine">true</item>
		<item
			name="android:paddingRight">6dp</item>
	</style>

	<style
		name="ArtEditLabel.White">
		<item
			name="android:textColor">#FFFFFF</item>
	</style>


	<style
		name="ArtEditInput">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:textSize">@dimen/ArtEditInput</item>
		<item
			name="android:textColor">@color/ArtEditInput</item>
		<item
			name="android:ellipsize">end</item>
		<item
			name="android:singleLine">true</item>
		<item
			name="android:cursorVisible">true</item>
		<item
			name="android:paddingLeft">6dp</item>
		<item
			name="android:background">@drawable/textfield_background</item>
	</style>

	<style
		name="ArtEditInput.Textarea">
		<item
			name="android:singleLine">false</item>
		<item
			name="android:minLines">4</item>
		<item
			name="android:gravity">left|top</item>
	</style>

	<style
		name="ArtEditInput.Dropdown">
		<item
			name="android:completionThreshold">1</item>
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_weight">1</item>
		<item
			name="android:layout_height">fill_parent</item>
	</style>

	<style
		name="AutocompleteDropdown">
		<item
			name="android:layout_width">wrap_content</item>
		<item
			name="android:layout_height">fill_parent</item>
		<item
			name="android:src">@drawable/arrow_dropdown_background</item>
		<item
			name="android:background">@null</item>
	</style>

	<style
		name="AutocompleteDropdown.Filter">
		<item
			name="android:src">@drawable/arrow_dropdown_filter_background</item>
	</style>

	<!-- Art Detail -->
	<style
		name="ArtDetailTitle">
		<item
			name="android:layout_marginLeft">9dp</item>
		<item
			name="android:layout_marginRight">9dp</item>
		<item
			name="android:textColor">@color/ArtDetailTitle</item>
		<item
			name="android:textStyle">bold</item>
		<item
			name="android:textSize">18dp</item>
		<item
			name="android:singleLine">false</item>
		<item
			name="android:maxLines">2</item>
		<item
			name="android:ellipsize">end</item>
		<item
			name="android:typeface">serif</item>
	</style>

	<style
		name="ArtDetailText">
		<item
			name="android:textColor">@color/ArtDetailText</item>
		<item
			name="android:textSize">14dp</item>
	</style>

	<style
		name="ArtDetailText.Bold">
		<item
			name="android:textStyle">bold</item>
	</style>

	<style
		name="ArtDetailHeading">
		<item
			name="android:textColor">@color/ArtDetailHeading</item>
		<item
			name="android:textSize">16dp</item>
		<item
			name="android:layout_marginTop">10dp</item>
		<item
			name="android:layout_marginBottom">10dp</item>
		<item
			name="android:layout_marginLeft">9dp</item>
		<item
			name="android:layout_marginRight">9dp</item>
	</style>

	<style
		name="ArtDetailHeading.Light">
		<item
			name="android:textColor">@color/ArtDetailHeadingLight</item>
		<item
			name="android:layout_margin">0dp</item>
	</style>

	<style
		name="ArtDetailText.Link">
		<item
			name="android:textStyle">bold|italic</item>
	</style>

	<style
		name="ArtDetailFormLabel">
		<item
			name="android:textColor">#FFFFFF</item>
		<item
			name="android:textSize">14dp</item>
		<item
			name="android:textStyle">bold|italic</item>
		<item
			name="android:layout_width">50dp</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_marginRight">6dp</item>
	</style>

	<style
		name="ArtDetailInput">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:textSize">@dimen/ArtEditInput</item>
		<item
			name="android:textColor">@color/ArtDetailInput</item>
		<item
			name="android:ellipsize">end</item>
		<item
			name="android:singleLine">true</item>
		<item
			name="android:cursorVisible">true</item>
		<item
			name="android:paddingLeft">6dp</item>
		<item
			name="android:background">@drawable/textfield_comment_background</item>
	</style>

	<style
		name="ArtDetailInput.Textarea">
		<item
			name="android:singleLine">false</item>
		<item
			name="android:minLines">4</item>
		<item
			name="android:gravity">left|top</item>
	</style>

	<style
		name="ArtDetailTableRow">
		<item
			name="android:layout_marginBottom">10dp</item>
		<item
			name="android:gravity">center_vertical</item>
	</style>

	<!-- Art Filter Background -->
	<style
		name="ArtFilterTitleBackground">
		<item
			name="android:background">@drawable/art_filter_title_background</item>
		<item
			name="android:padding">8dp</item>
		<item
			name="android:gravity">center</item>
	</style>
	
	<style
		name="ArtFiltersHeadingBackground">
		<item
			name="android:background">@drawable/art_filter_heading_background</item>
		<item
			name="android:padding">8dp</item>
	</style>

	<style
		name="ArtFilterTitle">
		<item
			name="android:textSize">17sp</item>
		<item
			name="android:textColor">#FFFFFF</item>
		<item
			name="android:textStyle">bold</item>
	</style>

	<style
		name="ArtFilterInputSearch"
		parent="ArtDetailInput">
		<item
			name="android:drawableLeft">@drawable/ic_filter_search</item>
		<item
			name="android:drawablePadding">3dp</item>
		<item
			name="android:imeOptions">actionSearch</item>
		<item
			name="android:hint">@string/search_hint</item>
	</style>

	<style
		name="ArtFilterInputDropdown"
		parent="ArtEditInput.Dropdown">
		<item
			name="android:cursorVisible">false</item>
		<item
			name="android:focusable">false</item>
		<item
			name="android:paddingLeft">6dp</item>
		<item
			name="android:background">@drawable/textfield_comment_background</item>
	</style>

	<style
		name="ArtFilterDialog"
		parent="@android:style/Theme.Dialog">
		<item
			name="android:windowBackground">@drawable/art_filter_dialog_background</item>
		<item
			name="android:windowNoTitle">true</item>
		<!-- <item -->
		<!-- name="android:windowIsFloating">true</item> -->
	</style>
</resources>