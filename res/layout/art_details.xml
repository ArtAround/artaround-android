<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:artfield="http://schemas.android.com/apk/res/us.artaround"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="6dp"
	android:background="@color/art_details_bg">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1.5"
		android:layout_marginBottom="6dp">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<us.artaround.android.ui.ArtField
				android:id="@+id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp" />

			<us.artaround.android.ui.ArtField
				android:id="@+id/artist"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp" />

			<us.artaround.android.ui.ArtField
				android:id="@+id/year"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp" />

			<us.artaround.android.ui.ArtField
				android:id="@+id/ward"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp" />

			<us.artaround.android.ui.ArtField
				android:id="@+id/location_desc"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp"
				artfield:multiline="true"
				artfield:label_left="false" />
		</LinearLayout>
	</ScrollView>

	<com.google.android.maps.MapView
		android:id="@+id/mini_map"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:clickable="true"
		android:apiKey="@string/maps_api" />

</LinearLayout>
