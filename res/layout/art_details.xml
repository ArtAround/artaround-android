<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <LinearLayout
		android:id="@+id/actionbar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView
			android:id="@+id/txt_name"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:ellipsize="end"
			android:text="Art name" />

		<LinearLayout
			android:id="@+id/wrapper_buttons"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right">

			<ImageView
				style="@style/ActionBarSeparator" />

			<ImageButton
				android:id="@+id/btn_add"
				android:src="@drawable/ic_btn_add"
				style="@style/ActionBarButton" />

			<ImageView
				style="@style/ActionBarSeparator" />

			<ImageButton
				android:id="@+id/btn_filter"
				android:src="@drawable/ic_btn_star_normal"
				style="@style/ActionBarButton" />
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/info_and_image"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/actionbar">
		
		<LinearLayout
			android:id="@+id/info"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/txt_artist_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoLabel"
				android:text="Artist" />
			
			<TextView
				android:id="@+id/txt_artist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoValue"
				android:text="Some Artist" />
				
			<TextView
				android:id="@+id/txt_year_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoLabel"
				android:text="Year" />
			
			<TextView
				android:id="@+id/txt_year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoValue"
				android:text="1920" />
				
			<TextView
				android:id="@+id/txt_neighborhood_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoLabel"
				android:text="Neighborhood" />
			
			<TextView
				android:id="@+id/txt_neighborhood"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/InfoValue"
				android:text="Adams Morgan" />
			
		</LinearLayout>
		
		<ImageView
			android:id="@+id/image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:scaleType="center" />
		
	</LinearLayout>
	

  
</RelativeLayout>
