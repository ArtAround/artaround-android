<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/ArtBubbleOuter"
	android:id="@+id/bubble_outer">

	<LinearLayout
		android:id="@+id/bubble_inner"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<include
			layout="@layout/art_bubble_thumb" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_marginLeft="10dp">

			<TextView
				style="@style/ArtBubbleText.Title"
				android:id="@+id/bubble_title" />

			<TextView
				style="@style/ArtBubbleText"
				android:id="@+id/bubble_author" />

			<TextView
				style="@style/ArtBubbleText"
				android:id="@+id/bubble_author" />


			<TextView
				style="@style/ArtBubbleText"
				android:id="@+id/bubble_category"
				android:textStyle="bold"
				android:textSize="11sp" />

			<TextView
				style="@style/ArtBubbleText"
				android:id="@+id/bubble_description"
				android:layout_marginTop="4dp" />
		</LinearLayout>

	</LinearLayout>
</LinearLayout>
